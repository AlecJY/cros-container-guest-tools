[Unit]
Description=Master sommelier listening on socket wayland-%i

[Service]
Type=notify
ExecStart=/usr/bin/sommelier \
              --master \
              --sd-notify="READY=1" \
              --socket=wayland-%i \
              /bin/sh -c "systemctl --user import-environment WAYLAND_DISPLAY SOMMELIER_VERSION"
Restart=always

[Install]
WantedBy=default.target
DefaultInstance=0
