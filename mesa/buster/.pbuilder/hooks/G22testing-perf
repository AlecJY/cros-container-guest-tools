# Add apt sources and preferences to not get packages from testing by default.

echo HOOK: add apt preferences for testing.

tee -a "/etc/apt/preferences.d/testing.pref" << EOF
Package: *
Pin: release a=testing
Pin-Priority: 400
EOF
