# Add apt sources and preferences to get waffle packages from testing.

echo HOOK: add apt preferences for waffle

tee -a "/etc/apt/preferences.d/waffle.pref" << EOF
Package: libwaffle-1-0
Pin: release a=testing
Pin-Priority: 505

Package: libwaffle-dev
Pin: release a=testing
Pin-Priority: 505
EOF
